<div id="splash-screen">
  <div class="logo-container">
    <img src="<%= asset_path('logo.png') %>" alt="Wedding Trip" class="logo">
  </div>
</div>

<!-- Hero Section with Slider -->
<section id="home" class="hero-slider">
    <!-- Slides -->
    <div class="slide active" 
         data-desktop-bg="<%= asset_path('background_img/img_bg_01.jpg') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_01m.jpg') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_02.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_02m.JPEG') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_03.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_03m.jpg') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_04.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_04m.jpg') %>">
        <div class="overlay"></div>
    </div>
    <div class="slide"
         data-desktop-bg="<%= asset_path('background_img/img_bg_05.JPG') %>"
         data-mobile-bg="<%= asset_path('background_img/img_bg_05m.jpg') %>">
        <div class="overlay"></div>
    </div>

    <!-- Hero Content -->
    <div class="hero-content">
        <h1>Capturing Your <span class="changing-word">Perfect</span><br>Day</h1>
        <p>Professional wedding photography and videography to preserve your precious moments forever</p>
        <div class="btn-container">
            <a href="#" class="btn btn-primary-custom btn-cta">Contact Us</a>
            <a href="/packages" class="btn btn-outline-light btn-cta">View Packages</a>
        </div>
    </div>
</section>

